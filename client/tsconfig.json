{
  "extends": "./configs/base.tsconfig",
  "compilerOptions": {
    "skipLibCheck": false,
    "baseUrl": ".",
    "paths": {
      "@rtpoet/rtpoet-glsp": [
        "rtpoet-glsp/src/*"
      ],
      "@rtpoet/rtpoet-theia": [
        "rtpoet-theia/src/*"
      ]
    },
    "plugins": [
      {
        "name": "tslint-language-service"
      }
    ]
  },
  "include": [
    "rtpoet-glsp/*/src",
    "rtpoet-theia/*/src"
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}
